---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="description" content="Astro description" />
			<meta name="viewport" content="width=device-width" />
			<title>{title}</title>
		</head>
		<body class="flex flex-col items-center">
      <div class="topBar">
        <h1>{title}</h1>
      </div>
			<slot />
		</body>
	</html>
	<style>
    .topBar{
      position: fixed;
      top: 0;
      left: 0; 
      width: 100%;
      height: 60px;
      background-color: #ffffff;
      color: rgb(255, 134, 28);
      padding: 10px;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
      font-size: 25px;
    }
    h1{
      opacity: 0.5;
      text-align: center;
    }
    body{
      height: 100vh;
      background: linear-gradient(to bottom right, rgb(255, 89, 0), rgb(255, 219, 101));
      display: flex;
      justify-content: center; 
      align-items: center;
      font-family: "Azeret Mono", monospace;
    }
	</style>